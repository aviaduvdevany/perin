{
    "designSystem": {
      "name": "Perin UI",
      "theme": "Futuristic Calm with Emotional Tech Warmth",
      "colors": {
        "primary": "#4B5DFF", 
        "primaryForeground": "oklch(0.205 0 0)",
        "secondary": "oklch(0.269 0 0)",
        "secondaryForeground": "oklch(0.985 0 0)",
        "accent": "#FF9A8B",
        "accentForeground": "oklch(0.985 0 0)",
        "background": "#0E101C",  
        "foreground": "#F8F9FC", 
        "cardBackground": "oklch(0.205 0 0)",
        "cardForeground": "oklch(0.985 0 0)",
        "popoverBackground": "oklch(0.269 0 0)",
        "popoverForeground": "oklch(0.985 0 0)"
      },
      "typography": {
        "headingFont": "Satoshi, sans-serif",
        "bodyFont": "Inter, sans-serif",
        "fontWeight": {
          "heading": "800",
          "body": "400"
        },
        "fontSize": {
          "hero": "4rem",
          "h1": "2.5rem",
          "h2": "1.875rem",
          "h3": "1.5rem",
          "body": "1rem",
          "small": "0.875rem"
        },
        "letterSpacing": "tight",
        "lineHeight": "1.4"
      },
      "layout": {
        "spacing": {
          "padding": "2rem",
          "gap": "1.5rem"
        },
        "maxWidth": "1200px",
        "grid": {
          "columns": 12,
          "gutter": "24px"
        },
        "borderRadius": "1rem",
        "elevation": {
          "card": "0 4px 30px rgba(0, 0, 0, 0.3)",
          "button": "0 2px 15px rgba(0, 0, 0, 0.2)"
        }
      },
      "buttons": {
        "style": "gradient",
        "borderRadius": "9999px",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600",
        "shadow": true,
        "hoverEffect": "light-glow"
      },
      "components": {
        "cards": {
          "background": "linear-gradient(145deg, #1D2239, #0E101C)",
          "glassEffect": true,
          "borderRadius": "1.5rem",
          "shadow": "inset 0 0 0.5rem rgba(255, 255, 255, 0.05)"
        },
        "icons": {
          "style": "rounded-line",
          "weight": "light",
          "stroke": "1.5px",
          "color": "currentColor"
        },
        "animations": {
          "transitions": "all 0.3s ease",
          "hoverScale": "1.05",
          "buttonPress": "scale(0.97)"
        }
      },
      "imagery": {
        "style": "3D abstract",
        "tone": "soft-glow neon",
        "forms": "rounded isometric blocks",
        "usage": "symbolic of intelligence, modularity, flow"
      },
      "voice": {
        "microcopy": "Calm, direct, emotionally intelligent",
        "cta": ["Try it now", "Delegate smarter", "Meet your Perin"]
      }
    }
  }
  